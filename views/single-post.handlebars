<div class="post-card">
  <div class="post-header">
    <h3>{{post.title}}</h3>
    <h4>Posted by User: {{post.user_id}} on Date: {{format_date post.createdAt}}</h4>
  </div>
  <div class="post-body">
    <p>
      "{{post.content}}"
    </p>
  </div>
</div>
<br>
{{#each comments}}
{{> comment-card}}
{{/each}}
{{#if loggedIn}}

{{else}}
<h1>You need to log in to leave comments!</h1>
<a href="/login"><button>Login</button></a>
{{/if}}